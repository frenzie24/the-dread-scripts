<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{User.name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>
  
  
  {{#if Posts.length}}
  <div class="col-md-6 project-list">
    <h3>Your Posts:</h3>
    {{#each Posts as |post| }}
    <div class="row mb-4 project">
      <div class="col-md-5">
        <h2>
          <!-- Call helper function with triple brackets to render the emoji span as HTML -->

          <p>Created by {{post.User.name}} on {{format_date post.date}}</p>

          <a href="/post/{{post.id}}">{{post.name}}</a>
        </h2>
        <h1>{{post.title}}</h1>
        <p>{{post.content}}</p>

      </div>
      {{#each post.Comments as |comment|}}
      <div class="row mb-4 project">
        <div class="pl-6">
          <h2 class="pl-4">
            <!-- Call helper function with triple brackets to render the emoji span as HTML -->
            <p>Created by {{comment.User.name}} on {{format_date comment.date}}</p>


          </h2>
          <p>{{comment.content}}</p>

        </div>
      </div>
      {{/each}}
    </div>
    {{/each}}
    {{/if}}
  </div>

  <script src="./js/dashboard.js"></script>