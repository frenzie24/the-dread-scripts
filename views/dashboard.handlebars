<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>


    {{#if Posts.length}}
    <div class="col-md-6 project-list">
      <h3>Your Posts:</h3>

      {{#each Posts as |post| }}
      {{!-- call the posts partial view and pass the post --}}
      {{> post post}}
      {{/each}}
      {{/if}}
      
    {{> newBlogItem isPost=true}}
    </div>

    <script src="./js/dashboard.js"></script>