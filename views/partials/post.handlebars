<!-- Loop over each object in the projects array -->

<div id='post{{id}}' class="row mb-4 project">
    <div class="col-md-5 pl-6">
        <h2 class="pl-4">
            <!-- Call helper function with triple brackets to render the emoji span as HTML -->

            <p>Created by {{User.name}} on {{format_date date}}</p>

            
        </h2>
       <a href="/post/{{id}}"> <h1>{{title}}</h1></a>
        <p>{{content}}</p>

    </div>
    {{#each Comments as |comment|}}
    {{> comment comment}}
    {{/each}}

    {{> newBlogItem isPost=false id=id}}

</div>