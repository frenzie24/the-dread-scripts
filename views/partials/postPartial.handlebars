<!-- Loop over each object in the projects array -->

<div id='post{{id}}' class="row mb-4 bg-slate-600 rounded-md text-white ">
    <div class="pl-6">
        <h2 class="pl-4">
            <!-- Call helper function with triple brackets to render the emoji span as HTML -->

            <p>Created by {{User.name}} on {{format_date date}}</p>


        </h2>
        <a href="/post?id={{id}}">
            <h1>{{title}}</h1>
        </a>

        <textarea id="postContent" class=" p-2 bg-slate-700 rounded-md" disabled>{{content}}</textarea>

    </div>
    {{#each Comments as |comment|}}
    {{> comment comment}}
    {{/each}}

    {{> newBlogItem isPost=false id=id}}
    <button id='deletePostBtn{{id}}' class="btn btn-sm btn-danger p-2" data-id="{{id}}"><img
            class="h-8 m-auto" src="./assets/images/icons8-delete-48.png" alt="A dark green delete icon">DELETE</button>
    <button class="p-2" name="{{id}}" id="editPostBtn"><img class="h-8 m-auto" src="./assets/images/icons8-edit-48.png"
            alt="A dark green save icon">Edit</button>
</div>